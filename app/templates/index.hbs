<h2 class="pt-3 text-center">Ember + JSON Server 🐹</h2>
<div class="d-flex justify-content-between gap-4">
  <div class="w-50 pt-5">
    <ul class="list-group list-group-numbered">
      <Endpoint
        @httpMethod="GET"
        @endpoint="/posts"
        @onClick={{fn this.handleOnClick "/posts"}}
      />
      <Endpoint
        @httpMethod="GET"
        @endpoint="/posts/1"
        @onClick={{fn this.handleOnClick "/posts/1"}}
      />
      <Endpoint
        @httpMethod="GET"
        @endpoint="/posts/1/comments"
        @onClick={{fn this.handleOnClick "/posts/1/comments"}}
      />
      <Endpoint
        @httpMethod="GET"
        @endpoint="/comments?postId=1"
        @onClick={{fn this.handleOnClick "/comments?postId=1"}}
      />
    </ul>
  </div>
  {{log this.posts}}
  <div class="w-50 pt-5">
    {{#each this.posts as |post|}}
      <PostCard @post={{post}} />
    {{/each}}
  </div>
</div>