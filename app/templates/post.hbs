{{page-title "Ember Media | Posts"}}
<div class="flash-messages-container">
  {{#each this.flashMessages.queue as |flash|}}
    <FlashMessage @flash={{flash}} />
  {{/each}}
</div>
<div class="container">
  <div class="row">
    <div class="{{if (eq this.activeRoute 'post.comment') 'col-8' 'col'}}">
      {{#each this.model as |post|}}
        <PostCard @post={{post}} @onDelete={{this.deletePost}} />
      {{/each}}
    </div>
    {{outlet}}
  </div>
</div>